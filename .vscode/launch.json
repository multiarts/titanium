{
  "version": "0.2.0",
  "configurations": [{
          "name": "Listen for XDebug",
          "type": "php",
          "request": "launch",
          "port": 9000,
          "log": true,
          "externalConsole": false,
          "pathMappings": {
              "/var/www/": "${workspaceFolder}",
          },
          "ignore": [
              "**/vendor/**/*.php"
          ]
      },
      {
          "name": "Launch currently open folder",
          "type": "php",
          "request": "launch",
          "program": "${file}",
          "cwd": "${fileDirname}",
          "port": 9000
      }
  ]
}